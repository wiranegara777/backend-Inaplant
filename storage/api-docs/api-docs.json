{
    "swagger": "2.0",
    "info": {
        "title": "Plant Control Monitoring API",
        "version": "1.0.0"
    },
    "basePath": "/api",
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Login api",
                "operationId": "getUserDetails",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "api for login that return token for authentication and user detail",
                        "required": true,
                        "schema": {
                            "properties": {
                                "email": {
                                    "description": "pemiliklahan@gmail.com",
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "401": {
                        "description": "unauthorized"
                    }
                }
            }
        },
        "/pusher": {
            "post": {
                "tags": [
                    "Message"
                ],
                "summary": "Push Notification Message",
                "operationId": "PushNotifications",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "you need login first before using this api",
                        "required": true,
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/messages": {
            "get": {
                "tags": [
                    "Message"
                ],
                "summary": "fetch all message",
                "description": "you need login first before using this api",
                "operationId": "fetch message",
                "responses": {
                    "200": {
                        "description": "successful"
                    },
                    "401": {
                        "description": "unauthenticated"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/image": {
            "post": {
                "tags": [
                    "File"
                ],
                "summary": "Image Upload",
                "operationId": "ImageUpload",
                "parameters": [
                    {
                        "name": "image",
                        "in": "formData",
                        "description": "the file you upload",
                        "type": "file"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    }
                }
            }
        }
    },
    "definitions": {},
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}