{
    "swagger": "2.0",
    "info": {
        "title": "Plant Control Monitoring API",
        "version": "1.0.0"
    },
    "basePath": "/api",
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Login api",
                "operationId": "getUserDetails",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "api for login that return token for authentication and user detail",
                        "required": true,
                        "schema": {
                            "properties": {
                                "email": {
                                    "description": "pemiliklahan@gmail.com",
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "devicetoken": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "401": {
                        "description": "unauthorized"
                    }
                }
            }
        },
        "/user_info": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "fetch user info",
                "operationId": "fetch message",
                "responses": {
                    "200": {
                        "description": "successful"
                    },
                    "401": {
                        "description": "unauthenticated"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/pusher": {
            "post": {
                "tags": [
                    "Message"
                ],
                "summary": "Push Notification Message",
                "operationId": "PushNotifications",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "you need login first before using this api",
                        "required": true,
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/messages/{message_id}": {
            "get": {
                "tags": [
                    "Message"
                ],
                "summary": "fetch all message between farmmanager and ahlipraktisi",
                "operationId": "fetch message",
                "parameters": [
                    {
                        "name": "message_id",
                        "in": "path",
                        "description": "you need login first before using this api",
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    },
                    "401": {
                        "description": "unauthenticated"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/messages": {
            "post": {
                "tags": [
                    "Message"
                ],
                "summary": "send message",
                "description": "you need login first before using this api",
                "operationId": "send message",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "you need login first before using this api",
                        "required": true,
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "sender_id": {
                                    "type": "integer"
                                },
                                "message_id": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    },
                    "401": {
                        "description": "unauthenticated"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/farm": {
            "get": {
                "tags": [
                    "Farm"
                ],
                "summary": "fetch list farm that supervised by ahli praktisi",
                "description": "you need login first before using this api!",
                "operationId": "fetch farm",
                "responses": {
                    "200": {
                        "description": "successful"
                    },
                    "401": {
                        "description": "unauthenticated"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Farm"
                ],
                "summary": "create farm",
                "operationId": "send message",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "you need login first before using this api !",
                        "required": true,
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "id_pemilik_lahan": {
                                    "type": "integer"
                                },
                                "id_farm_manager": {
                                    "type": "integer"
                                },
                                "id_ahli_praktisi": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    },
                    "401": {
                        "description": "unauthenticated"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/image": {
            "post": {
                "tags": [
                    "File"
                ],
                "summary": "Image Upload",
                "operationId": "ImageUpload",
                "parameters": [
                    {
                        "name": "image",
                        "in": "formData",
                        "description": "the file you upload",
                        "type": "file"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    }
                }
            }
        },
        "/users/{role}": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "get list user by role",
                "operationId": "fetch user",
                "parameters": [
                    {
                        "name": "role",
                        "in": "path",
                        "description": "you need login first before using this api",
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful"
                    },
                    "401": {
                        "description": "unauthenticated"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Logout api",
                "operationId": "logout",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "api for logout",
                        "required": true,
                        "schema": {
                            "properties": {
                                "devicetoken": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "401": {
                        "description": "unauthorized"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        }
    },
    "definitions": {},
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}